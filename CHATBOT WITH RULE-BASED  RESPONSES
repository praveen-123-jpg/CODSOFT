def simple_chatbot():
    print("Hi there! I'm a simple chatbot.")
    print("You can start chatting with me. Type 'bye' to exit.")
    
    while True:
        user_input = input("You: ").strip().lower()
        
        if user_input == 'bye':
            print("Chatbot: Bye! Have a great day.")
            break
        elif 'hello' in user_input or 'hi' in user_input:
            print("Chatbot: Hello! How can I help you?")
        elif 'how are you' in user_input:
            print("Chatbot: I'm a bot. I'm always here to help you!")
        elif 'your name' in user_input:
            print("Chatbot: I'm just a simple chatbot.")
        elif 'time' in user_input:
            print("Chatbot: I'm sorry, I don't have a clock.")
        else:
            print("Chatbot: Sorry, I didn't understand that.")
            
if __name__ == "__main__":
    simple_chatbot()
